<div class="flex flex-col text-center rounded-lg shadow max-w-sm">
  <div class="flex-1 flex flex-col p-8">
    <img class="w-32 h-32 mx-auto rounded-full" src="{{ image }}" alt="user-image" />
    <h3 class="mt-6 text-gray-900 text-sm leading-5 font-medium">{{ name }}</h3>
    <div class="mt-1 flex-grow flex flex-col justify-between">
      <span class="text-gray-500 text-sm leading-5">{{ position }}</span>
        <span class="mt-3">
          {% if role is not empty %}
            <span class="px-2 py-1 text-xs bg-green-100 font-semibold text-green-700 rounded-full">{{ role }}</span>
          {% endif %}
        </span>
    </div>
  </div>
  <div class="border-t border-gray-200">
    <div class="flex">
      <div class="w-0 flex-1 flex border-r border-gray-200">
        <a href="mailto:{{ mail }}" class="flex-1 inline-flex items-center justify-center text-sm py-4">
          <svg class="w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="ml-3">{{ 'Email' |t }}</span>
        </a>
      </div>
      <div class="flex-1 flex">
        <a href="tel:{{ number }}" class="flex-1 inline-flex items-center justify-center text-sm">
          <svg class="w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="ml-3">{{ 'Call' |t }}</span>
        </a>
      </div>
    </div>
  </div>
</div>
